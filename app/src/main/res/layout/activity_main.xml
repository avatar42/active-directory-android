<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:isScrollContainer="true"
        android:orientation="vertical"
        tools:context="com.azuresamples.azureadsampleapp.MainActivity">


        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="@string/welcome_text"
            android:textColor="#3f3f3f"
            android:textSize="30dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/graphData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:isScrollContainer="true"
            android:scrollbars="vertical"
            android:text="@string/loading"
            android:textColor="#3f3f3f"
            android:visibility="invisible" />

        <Button
            android:id="@+id/callGraphMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#00a1f1"
            android:text="@string/call_me_graph"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/callGraphList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="#00a1f1"
            android:text="@string/call_list_graph"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="top|bottom|center"
            android:orientation="vertical">

            <Button
                android:id="@+id/clearCache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="#00a1f1"
                android:text="@string/sign_out"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:visibility="invisible" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>